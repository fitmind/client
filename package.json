{
    "name": "fitmind-client",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@types/axios": "^0.14.0",
        "@types/bootstrap": "^4.3.1",
        "@types/jest": "^24.0.15",
        "@types/node": "12.0.8",
        "@types/ramda": "^0.26.16",
        "@types/react": "16.8.21",
        "@types/react-dom": "16.8.4",
        "@types/react-redux": "^7.1.0",
        "@types/redux": "^3.6.0",
        "@types/yup": "^0.26.22",
        "bootstrap": "^4.3.1",
        "connected-react-router": "^6.4.0",
        "env-cmd": "^9.0.3",
        "formik": "^1.5.8",
        "moment": "^2.24.0",
        "ramda": "^0.26.1",
        "react": "^16.8.6",
        "react-bootstrap": "^1.0.0-beta.9",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1",
        "react-select": "^3.0.4",
        "redux": "^4.0.1",
        "redux-devtools-extension": "^2.13.8",
        "redux-saga": "^1.0.3",
        "redux-saga-test-plan": "^4.0.0-beta.3",
        "styled-components": "^4.3.2",
        "typescript": "3.5.2",
        "yup": "^0.27.0"
    },
    "scripts": {
        "dev": "react-scripts start",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prettier:check": "prettier --check '**/*.{ts,js,css,html,tsx}'",
        "prettier:watch": "onchange '**/*.{ts,js,css,html,tsx}' -- prettier --write {{changed}}",
        "prettier:all": "prettier --write '**/*.{ts,js,css,html,tsx}'",
        "lint": "eslint src/**/*.tsx",
        "lint:fix": "eslint --fix src/**/*.tsx"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx,js,jsx}",
            "!src/index.tsx"
        ],
        "coverageThreshold": {
            "verbose": true,
            "global": {
                "branches": 90,
                "functions": 90,
                "lines": 90,
                "statements": 90
            }
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@redux-saga/testing-utils": "^1.0.3",
        "@types/enzyme": "^3.9.4",
        "@types/moment": "^2.13.0",
        "@types/react-router-dom": "^4.3.4",
        "@types/react-test-renderer": "^16.8.2",
        "@types/redux-devtools-extension": "^2.13.2",
        "@types/redux-saga": "^0.10.5",
        "@types/styled-components": "^4.1.16",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "babel-jest": "^24.8.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "husky": ">=1",
        "lint-staged": ">=8",
        "onchange": "^6.0.0",
        "prettier": "^1.18.2",
        "react-test-renderer": "^16.8.6",
        "redux-saga-test": "^1.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,json,md,scss,ts,tsx}": [
            "prettier --write",
            "git add"
        ]
    }
}
